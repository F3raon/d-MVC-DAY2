@model List<Department>

	

<h1 class="text-success">All Departments</h1>

<table class="table text-center">
    <thead>
        <tr>
            <th scope="col">Department Id</th>
            <th scope="col">Department Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dept in Model)
        {
            <tr>
                <th scope="row">@dept.DeptId</th>
                <td scope="col">@dept.DeptName</td>
                <td scope="col">
                    <a href="~/Department/ViewDetails/@dept.DeptId" class="btn btn-primary">View Details</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <a href="~/Department/Create" class="btn btn-success">Add Student</a>
    </tfoot>
</table>